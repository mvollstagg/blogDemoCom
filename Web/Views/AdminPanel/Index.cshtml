@using Data.Domain
@model PagedList.Core.PagedList<Data.Domain.Post>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "~/Views/Shared/AdminPanel/_AdminPanelLayout.cshtml";
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row">    
        <div class="col-3">
            <div class="card text-white bg-info mb-3" style="max-width: 18rem;">
            <div class="card-header">Bugün Açılan Post Sayısı</div>
            <div class="card-body">
                <i class="fas fa-file-alt fa-6x"></i>   <h1>15</h1>             
            </div>
            </div>
        </div>
        <div class="col-3">
            <div class="card text-white bg-primary mb-3" style="max-width: 18rem;">
            <div class="card-header">Toplam Post Sayısı</div>
            <div class="card-body">
                <h5 class="card-title">Primary card title</h5>
                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
            </div>
            </div>
        </div>
        <div class="col-3">
            <div class="card text-white bg-primary mb-3" style="max-width: 18rem;">
            <div class="card-header">Bugün Kayıt Olan Kullanıcısı</div>
            <div class="card-body">
                <h5 class="card-title">Primary card title</h5>
                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
            </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-chart-bar mr-1"></i>
                    Bar Chart Example
                </div>
                <div class="card-body"><canvas id="myBarChart" width="100%" height="40"></canvas></div>
            </div>
        </div>
    </div>
</div>
