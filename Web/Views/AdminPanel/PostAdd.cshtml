@model Data.Domain.Post
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "~/Views/Shared/AdminPanel/_AdminPanelLayout.cshtml";
    ViewData["Title"] = "Home Page";
}
<script src="https://code.jquery.com/jquery-3.5.1.min.js" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

<link rel="stylesheet" href="~/css/dropzone.css" />
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.js"></script>

<div id="layoutAuthentication_content">
    <main>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-12">
                    <form method="POST" enctype="multipart/form-data" asp-controller="AdminPanel" asp-action="PostEkle" >
                    <div class="card shadow-lg border-0 rounded-lg mt-5">
                        <div class="card-header"><h3 class="text-center font-weight-light my-4">Yeni Post Ekle!</h3></div>
                        <div class="card-body">                            
                            <div class="form-row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="small mb-1" for="inputFirstName">Post Başlığı</label>
                                        <input class="form-control py-4" name="Title" id="Title" type="text" />
                                    </div>
                                </div>                                
                            </div>
                            <div class="form-group">
                                <label class="small mb-1" for="inputEmailAddress">İçerik</label>
                                @Html.TextAreaFor(Model => Model.Content, new { @class = "form-control", id = "summernote", name = "Content"})
                            </div>
                            <div class="form-row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="small mb-1" for="Image">Fotoğraf</label> 
                                        <div class="custom-file">  
                                            <input type="file" class="custom-file-input" name="File" >  
                                            <label class="custom-file-label" for="File">Dosya seç</label>  
                                        </div>  
                                        <span asp-validation-for="Image" class="text-danger"></span>                                          
                                    </div>
                                </div>                                    
                            </div>
                            <div class="form-group mt-4 mb-0"><button class="btn btn-primary btn-block" type="submit" value="Upload" >Post Ekle!</button></div>                        
                        </div>                        
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </main>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery/dist/dropzone.js"></script>
<script type="text/javascript">
    $(".custom-file-input").on("change", function () {  
        var fileName = $(this).val().split("\\").pop();  
        $(this).siblings(".custom-file-label").addClass("selected").html(fileName);  
    });  

    $(document).ready(function() {
       $('#summernote').summernote({        
        tabsize: 2,
        height: 300,
        disableDragAndDrop: true,
        toolbar: [
            // [groupName, [list of button]]
            ['style', ['bold', 'italic', 'underline', 'clear']],
            ['font', ['strikethrough', 'superscript', 'subscript']],
            ['fontsize', ['fontsize']],
            ['color', ['color']],
            ['para', ['ul', 'ol', 'paragraph']],
            ['height', ['height']]
        ]
      });
    });
</script>