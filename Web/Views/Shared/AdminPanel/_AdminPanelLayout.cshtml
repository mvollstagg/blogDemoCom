<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="Media Balans" />
    <title>Cms Panel | Imagro</title>
    @RenderSection("Styles", required: false)
    <link href="~/assets-cms/css/styles.css" rel="stylesheet" />
    <link href="~/assets-cms/lib/toastr/build/toastr.min.css" rel="stylesheet" />
    <link rel="icon" type="image/x-icon" href="~/assets-cms/img/favicon.png" />
    <script data-search-pseudo-elements defer src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/feather-icons/4.28.0/feather.min.js" crossorigin="anonymous"></script>
</head>
<body class="nav-fixed">
    <div class="loa">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
    <nav class="topnav navbar navbar-expand shadow justify-content-between justify-content-sm-start navbar-light bg-white" id="sidenavAccordion">
        <button class="btn btn-icon btn-transparent-dark order-1 order-lg-0 me-2 ms-lg-2 me-lg-0" id="sidebarToggle"><i data-feather="menu"></i></button>
        <a class="navbar-brand pe-3 ps-4 ps-lg-2"  asp-controller="Home" asp-action="Index">MB Admin I&Others</a>
        <ul class="navbar-nav align-items-center ms-auto">
            <li class="nav-item dropdown no-caret dropdown-user me-3 me-lg-4">
                <a class="btn btn-icon btn-transparent-dark dropdown-toggle" id="navbarDropdownUserImage" href="javascript:void(0);" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <img class="img-fluid" src="~/assets-cms/img/illustrations/profiles/profile-2.png" />
                </a>
                <div class="dropdown-menu dropdown-menu-end border-0 shadow animated--fade-in-up" aria-labelledby="navbarDropdownUserImage">
                    <div class="dropdown-header d-flex align-items-center">
                        <img class="dropdown-user-img" src="~/assets-cms/img/illustrations/profiles/profile-2.png" />
                        <div class="dropdown-user-details">
                            <div class="dropdown-user-details-name">@User.Identity.Name</div>
                            <div class="dropdown-user-details-email">@User.FindFirst(ClaimTypes.Email).Value</div>
                        </div>
                    </div>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item"  asp-controller="AdminPanel" asp-action="Logout">
                        <div class="dropdown-item-icon"><i data-feather="log-out"></i></div>
                        Çıkış Yap
                    </a>
                </div>
            </li>
        </ul>
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sidenav shadow-right sidenav-light">
                <div class="sidenav-menu">
                    <div class="nav accordion" id="accordionSidenav">
                        <div class="sidenav-menu-heading">Ana sayfa</div>
                        <a class="nav-link"  asp-controller="AdminPanel" asp-action="Index">
                            <div class="nav-link-icon"><i data-feather="activity"></i></div>
                            Ana Sayfa
                        </a>

                        <div class="sidenav-menu-heading">Ayarlar</div>
                        <a class="nav-link" asp-controller="AdminPanel" asp-action="PostSettings">
                            <div class="nav-link-icon"><i data-feather="settings"></i></div>
                            Post İşlemleri
                        </a>
                        @* <a class="nav-link"  asp-controller="AppSeos" asp-action="Index">
                            <div class="nav-link-icon"><i data-feather="tool"></i></div>
                            Sayfa Seo Ayarları
                        </a>
                        <a class="nav-link"  asp-controller="AppConfigs" asp-action="Index">
                            <div class="nav-link-icon"><i data-feather="settings"></i></div>
                            Genel Ayarlar
                        </a> *@
                    </div>
                </div>
                <div class="sidenav-footer">
                    <div class="sidenav-footer-content">
                        <div class="sidenav-footer-subtitle">Giriş yaptı:</div>
                        <div class="sidenav-footer-title">@User.FindFirst(ClaimTypes.Email).Value</div>
                    </div>
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main>
                @RenderBody()
            </main>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/assets-cms/lib/toastr/build/toastr.min.js"></script>
    <script src="~/assets-cms/js/scripts.js"></script>
    @RenderSection("Validation", required: false)
    @RenderSection("Scripts", required: false)
</body>
</html>
