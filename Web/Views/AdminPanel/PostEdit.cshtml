@model Data.Domain.Post
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "~/Views/Shared/AdminPanel/_AdminPanelLayout.cshtml";
    ViewData["Title"] = "Home Page";
}
<script src="https://code.jquery.com/jquery-3.5.1.min.js" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.js"></script>

<div id="layoutAuthentication_content">
    <main>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-12">
                    <form>
                        <div class="card shadow-lg border-0 rounded-lg mt-5">
                            <div class="card-header"><h3 class="text-center font-weight-light my-4">Postu Güncelle</h3></div>
                            <div class="card-body">
                                <input class="form-control py-4" id="Id" type="text" value="@Model.Id" style="display:none;"/>
                                <div class="form-row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label class="small mb-1" for="inputFirstName">Post Başlığı</label>
                                            <input class="form-control py-4" id="Title" type="text" value="@Model.Title" />
                                        </div>
                                    </div>                                
                                </div>
                                <div class="form-group">
                                    <label class="small mb-1" for="inputEmailAddress">İçerik</label>
                                    <div id="summernote"></div>
                                </div>
                                <div class="form-row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="small mb-1" for="inputPassword">Fotoğraf</label>
                                            
                                        </div>
                                    </div>                                    
                                </div>
                                <div class="form-group mt-4 mb-0"><button class="btn btn-primary btn-block" onclick="postGuncelle()">Güncelle</button></div>                        
                            </div>                        
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script type="text/javascript">
    $(document).ready(function() {
       $('#summernote').summernote({        
        tabsize: 2,
        height: 300
      });
        var markupStr = '@Model.Content';
        $('#summernote').summernote('code', markupStr);

    });

     function postGuncelle() {
        var id = document.getElementById("Id").value;
        var title = document.getElementById("Title").value;
        var content = $('#summernote').summernote('code');
        var image = "placehold.it/750x300";
        $.ajax({
            url: '/AdminPanel/PostGuncelle',
            data: { Id: id, Title: title, Content: content, Image: image },
            type: 'post',
            dataType: 'json',
            success: function (data) {
                Swal.fire({
                    icon: 'success',
                    title: 'Başarılı!',
                    text: 'Ayarlarınız güncellendi!',
                    customClass: 'swal-resetPassword',
                    showConfirmButton: false,
                    timer: 5000
                })
                location.replace("/AdminPanel/PostSettings")
            },
            error: function (data) {
                Swal.fire(
                'Sistem Hatası!',
                'Lütfen daha sonra tekrar deneyin!',
                'error'
                )
            }
        });
     }
     
</script>